<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="dao.hibernate.ItemsEntity" table="items" schema="shop">
        <id name="id">
            <column name="id" sql-type="bigint(20)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(255)"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(255)"/>
        </property>
        <property name="price">
            <column name="price" sql-type="double" precision="-1"/>
        </property>
        <set name="ordersById" inverse="true">
            <key>
                <column name="item_id" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="dao.hibernate.OrderEntity"/>
        </set>
    </class>
</hibernate-mapping>