<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="dao.hibernate.OrderEntity" table="order" schema="shop">
        <id name="id">
            <column name="id" sql-type="bigint(20)"/>
        </id>
        <property name="orderId">
            <column name="order_id" sql-type="bigint(20)" not-null="true"/>
        </property>
        <many-to-one name="usersByUserId" class="dao.hibernate.UsersEntity">
            <column name="user_id"/>
        </many-to-one>
        <many-to-one name="itemsByItemId" class="dao.hibernate.ItemsEntity">
            <column name="item_id" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>